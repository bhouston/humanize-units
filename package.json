{
  "name": "humanize-units",
  "version": "1.1.0",
  "description": "Efficient TypeScript utilities for converting numeric values to human friendly rounded strings with unit / magnitude prefixes.",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "clean:all": "pnpm clean &&rimraf node_modules",
    "lint": "biome lint --write",
    "format": "biome format --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "prepack": "pnpm run build",
    "publish": "pnpm run clean && pnpm run build && pnpm publish --access public"
  },
  "keywords": [
    "format",
    "unit",
    "bytes",
    "count",
    "seconds",
    "typescript",
    "humanize",
    "esm"
  ],
  "author": "",
  "license": "MIT",
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.12.0",
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@types/node": "^22.7.4",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3",
    "rimraf": "^6.0.1"
  }
}
